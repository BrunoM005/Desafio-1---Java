public class ListaEncadeadaVetor {
    
    static class No {
        int valor;
        int proximo; // índice do próximo nó no vetor (-1 se for o fim)
        
        No(int valor, int proximo) {
            this.valor = valor;
            this.proximo = proximo;
        }
    }

    private static final int TAMANHO = 100;
    private No[] lista = new No[TAMANHO];
    private int inicio = -1;
    private int livre = 0;

    public ListaEncadeadaVetor() {
        for (int i = 0; i < TAMANHO - 1; i++) {
            lista[i] = new No(0, i + 1); // lista de posições livres
        }
        lista[TAMANHO - 1] = new No(0, -1);
    }

    public void inserirInicio(int valor) {
        if (livre == -1) {
            System.out.println("Lista cheia!");
            return;
        }

        int novo = livre;
        livre = lista[livre].proximo;

        lista[novo].valor = valor;
        lista[novo].proximo = inicio;
        inicio = novo;
    }

    public void exibir() {
        int atual = inicio;
        while (atual != -1) {
            System.out.print(lista[atual].valor + " ");
            atual = lista[atual].proximo;
        }
        System.out.println();
    }

    public void removerInicio() {
        if (inicio == -1) {
            System.out.println("Lista vazia!");
            return;
        }

        int removido = inicio;
        inicio = lista[inicio].proximo;

        lista[removido].proximo = livre;
        livre = removido;
    }
}
